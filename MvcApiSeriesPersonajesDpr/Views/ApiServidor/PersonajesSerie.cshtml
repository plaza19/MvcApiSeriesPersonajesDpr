@model IEnumerable<MvcApiSeriesPersonajesDpr.Models.Personaje>

@{
    ViewData["Title"] = "PersonajesSerie";
    int idserieaux = ViewBag.idserie;
}

<h1>PersonajesSerie</h1>

<p>
    <a asp-controller="ApiServidor" asp-action="InsertarPersonaje" asp-route-idSerie="@idserieaux">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPersonaje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombrePersonaje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdSerie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPersonaje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombrePersonaje)
            </td>
            <td>
                <img src="@item.Imagen" style="height:400px; width:270px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdSerie)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "DeletePersonaje", new {  idPersonaje=item.IdPersonaje  })
            </td>
        </tr>
}
    </tbody>
</table>
